@model QuestionnairesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h2>Available Questionaires!</h2>

<ul>
    @foreach (var questionnaire in @Model.Questionnaires)
    {
        <li>
            <a asp-action="Index" asp-controller="Questionnaire" asp-route-id="@questionnaire.Id">Start @questionnaire.Title</a> ( @(questionnaire.PercentCompleted)% completed)
        </li>
    }
</ul>